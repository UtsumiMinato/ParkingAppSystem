<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarPlateFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_grey_900">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="99dp"
                    android:layout_marginEnd="76dp"
                    android:gravity="center_vertical"
                    android:text="ENTER CAR PLATE"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:inputType="text"
                android:gravity="center"
                android:hint="My Car Plate"
                android:textSize="30dp"
                android:textColorHint="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/editTextFirst"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:background="#BDBABA"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:background="@color/black"
                    android:layout_marginTop="25dp"/>

                <EditText
                    android:id="@+id/editTextSecond"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:background="#BDBABA"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Confirm"
                android:layout_marginTop="120dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/white"
                android:padding="13dp" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>
